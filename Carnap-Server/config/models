User
    ident Text
    password Text Maybe
    UniqueUser ident
    deriving Typeable

UserData
    firstName Text
    lastName Text
    enrolledIn CourseId Maybe
    instructorId InstructorMetadataId Maybe
    userId UserId
    UniqueUserData userId

AuthJwk
    value ByteString
    deriving Eq

AuthNonce
    value ByteString
    seenAt UTCTime
    UniqueNonce value

LtiPlatformInfo
    issuer Text
    clientId Text
    oidcAuthEndpoint Text
    jwksUrl String
    Primary issuer clientId
    deriving Eq Show

SyntaxCheckSubmission
    problem Text
    time UTCTime
    userId UserId
    source ByteString
    assignmentId AssignmentMetadataId Maybe
    UniqueSyntaxCheckP problem userId source

TranslationSubmission
    problem Text
    time UTCTime
    userId UserId
    source ByteString
    assignmentId AssignmentMetadataId Maybe
    UniqueTranslationP problem userId source

TruthTableSubmission
    problem Text
    time UTCTime
    userId UserId
    source ByteString
    assignmentId AssignmentMetadataId Maybe
    UniqueTruthTableP problem userId source

DerivationSubmission
    problem Text
    derivation Text
    time UTCTime
    userId UserId
    source ByteString
    assignmentId AssignmentMetadataId Maybe
    UniqueDerivationP problem userId source

ProblemSubmission
    ident Text
    data ProblemData
    type ProblemType
    time UTCTime
    userId UserId
    correct Bool
    credit Int Maybe
    lateCredit Int Maybe
    extra Int Maybe
    source ProblemSource
    assignmentId AssignmentMetadataId Maybe
    UniqueProblemSubmission ident userId source

AssignmentState
    value Value
    userId UserId
    assignmentId AssignmentMetadataId
    UniqueAssignmentState userId assignmentId

SavedDerivedRule
    derivedRule ByteString
    name Text
    time UTCTime
    userId UserId
    UniqueDerivedRule name userId

SavedRule
    derivedRule SomeRule
    name Text
    time UTCTime
    userId UserId
    UniqueRule name userId

AssignmentMetadata
    document DocumentId
    description Text Maybe
    assigner CoInstructorId Maybe
    duedate UTCTime Maybe
    visibleFrom UTCTime Maybe
    visibleTill UTCTime Maybe
    date UTCTime
    course CourseId
    availability AvailabilityStatus Maybe
    UniqueAssignment document course

AssignmentAccessToken
    createdAt UTCTime
    assignment AssignmentMetadataId
    user UserId
    UniqueAssignmentAccessToken user assignment

Document
    filename Text
    date UTCTime
    creator UserId
    description Text Maybe
    scope SharingScope
    UniqueDocument filename creator
    deriving Eq

Tag
    bearer DocumentId
    name Text
    UniqueTag bearer name
    deriving Eq

-- the below `deriving Show` is load-bearing: it mitigates
-- https://github.com/yesodweb/persistent/issues/1047
InstructorMetadata
    deriving Show

CoInstructor
    ident InstructorMetadataId
    course CourseId
    UniqueCoInstructor ident course

Course
    title Text
    description Text Maybe
    instructor InstructorMetadataId
    textbookProblems BookAssignmentTable Maybe
    startDate UTCTime
    endDate UTCTime
    totalPoints Int
    timeZone ByteString --timezones are stored as tznames
    UniqueCourse title
    deriving Eq

 -- By default this file is used in Model.hs (which is imported by Foundation.hs)
