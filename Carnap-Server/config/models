User
    ident Text
    password Text Maybe
    UniqueUser ident
    deriving Typeable

UserData
    firstName Text
    lastName Text
    enrolledIn CourseId Maybe
    instructorId InstructorMetadataId Maybe
    userId UserId
    UniqueUserData userId

SyntaxCheckSubmission
    problem Text
    time UTCTime
    userId UserId
    source ByteString
    assignmentId AssignmentMetadataId Maybe
    UniqueSyntaxCheckP problem userId source

TranslationSubmission
    problem Text
    time UTCTime
    userId UserId 
    source ByteString
    assignmentId AssignmentMetadataId Maybe
    UniqueTranslationP problem userId source

TruthTableSubmission
    problem Text
    time UTCTime
    userId UserId 
    source ByteString
    assignmentId AssignmentMetadataId Maybe
    UniqueTruthTableP problem userId source

DerivationSubmission
    problem Text
    derivation Text
    time UTCTime
    userId UserId 
    source ByteString
    assignmentId AssignmentMetadataId Maybe
    UniqueDerivationP problem userId source

SavedDerivedRule
    derivedRule ByteString
    name Text
    time UTCTime
    userId UserId
    UniqueDerivedRule name userId

AssignmentMetadata
    document DocumentId
    description Text Maybe
    duedate UTCTime Maybe
    date UTCTime
    course CourseId
    UniqueAssignment document course

Document
    filename Text
    date UTCTime
    creator UserId
    description Text Maybe
    scope SharingScope
    UniqueDocument filename creator
    deriving Eq

InstructorMetadata

Course
    title Text
    description Text Maybe
    instructor InstructorMetadataId
    textbookProblems BookAssignmentTable Maybe
    startDate UTCTime
    endDate UTCTime
    totalPoints Int
    timeZone ByteString --timezones are stored as tznames
    UniqueCourse title instructor
    deriving Eq

